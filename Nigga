local HttpService = game:GetService("HttpService")

if not getgenv().key or getgenv().key == "" then
    warn("❌ Please set getgenv().key first!")
    return
end

local hwid = gethwid()
local api_url = "https://YOUR-PHP-SERVER/validate.php?key="..getgenv().key.."&hwid="..hwid

local success, result = pcall(function()
    return HttpService:GetAsync(api_url)
end)

if not success then
    warn("❌ Failed to reach server.")
    return
end

loadstring(result)()
